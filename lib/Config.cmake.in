# This is the template config file that CMake will customize according
# to the project's build options.

# This is required in all package config files
@PACKAGE_INIT@

# Include the target file generated by CMake with the
# install(TARGETS ${PROJECT_NAME} EXPORT ...) command in CMakeLists.txt
include("${CMAKE_CURRENT_LIST_DIR}/${CMAKE_FIND_PACKAGE_NAME}Targets.cmake")

# Only add OpenMP if it was enabled for this build

# OpenMP_FOUND=@OpenMP_FOUND@
# if(OpenMP_FOUND)
if(@OpenMP_FOUND@)
    # This adds the find_dependency(...) macro which enables us to
    # request dependency packages without clutturing the output
    include(CMakeFindDependencyMacro)

    find_dependency(OpenMP)

    # This is the magic sauce that will make the transitive dependencies
    # happen automatically for clients
    target_link_libraries(${CMAKE_FIND_PACKAGE_NAME}::${CMAKE_FIND_PACKAGE_NAME} INTERFACE OpenMP::OpenMP_C)
endif()

# Verify that all requested package components have been found
check_required_components(${CMAKE_FIND_PACKAGE_NAME})
